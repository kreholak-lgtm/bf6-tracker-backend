{
  "compilerOptions": {
    "target": "ES2020",                // Kompiluj do nowoczesnego JavaScriptu
    "module": "CommonJS",             // Używaj standardowego formatu modułów Node.js
    "moduleResolution": "node",       // Jak Node.js szuka modułów
    "esModuleInterop": true,          // <--- TO JEST KLUCZOWA POPRAWKA
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   // Włącz sprawdzanie typów
    "skipLibCheck": true,             // Przyspiesz kompilację
    "outDir": "dist"
  },
  "include": ["index.ts"] // Uwzględnij tylko Twój główny plik serwera
}
