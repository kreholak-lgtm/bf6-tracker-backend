{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Zrelaksowane reguły (z Twojej propozycji) - klucz do pomyślnej migracji
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,

    "skipLibCheck": true,
    "resolveJsonModule": true,

    // KLUCZOWE: Pozwalamy na pliki JavaScript, ale ich nie sprawdzamy
    "allowJs": true,
    "checkJs": false,
    
    "moduleResolution": "Node",

    // JAWNA LISTA TYPÓW: Zaktualizowana o pakiety z package.json
    "types": [
      "node",
      "express", // Typy dla Express
      "pg",      // Typy dla 'pg' (PostgreSQL)
      "cors",    // Typy dla 'cors'
      "bcrypt",  // Typy dla 'bcrypt'
      "jsonwebtoken", // Typy dla 'jsonwebtoken'
      "nodemailer"    // Typy dla 'nodemailer'
    ]
  },
  "include": [
    "./*.ts",     // Dołącz wszystkie nowe pliki TypeScript w głównym folderze
    "./*.js"      // Dołącz istniejące pliki JS (index.js, auth.js, email.js)
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
