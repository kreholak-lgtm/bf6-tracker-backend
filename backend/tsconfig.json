{
  "compilerOptions": {
    // Określa moduł docelowy ES2022 (wymagany dla 'await' poza funkcjami async, ale ES2020 wystarczy dla większości Node.js)
    "target": "ES2020", 
    // Używa CommonJS, aby pasowało do istniejącego kodu Node.js (require/module.exports)
    "module": "CommonJS", 
    "rootDir": "./",
    "outDir": "./dist",
    // Umożliwia domyślny import z modułów bez domyślnego eksportu (ważne dla Express)
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,

    // --- Zrelaksowane reguły (z Twojej propozycji) ---
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,

    "skipLibCheck": true,
    "resolveJsonModule": true,

    // --- KLUCZOWE USTAWIENIA DLA ISTNIEJĄCEGO JS ---
    // Włącza przetwarzanie plików JavaScript.
    "allowJs": true,
    // Wyłącza sprawdzanie typów dla plików JS (ponieważ są to stare pliki bez adnotacji).
    "checkJs": false, 
    
    // Rozwiązuje moduły w sposób typowy dla Node.js
    "moduleResolution": "Node", 

    // JAWNA LISTA TYPÓW (z Twojego package.json)
    "types": [
      "node",
      "express", 
      "pg", 
      "cors", 
      "bcrypt", 
      "jsonwebtoken", 
      "nodemailer",
      "axios" // Dodano axios
    ]
  },
  "include": [
    "./*.ts", 
    // Dołącz istniejące pliki JS (index.js, auth.js, email.js)
    "./*.js" 
  ],
  "exclude": [
    "node_modules",
    "dist" // Wyklucza folder wyjściowy
  ]
}
