{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "strict": false,               
    "noImplicitAny": false,        
    "strictPropertyInitialization": false, 
    
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": false, 
    "moduleResolution": "Node",
    // --- OSTATECZNA SYNCHRONIZACJA TYPÓW ---
    // Używamy standardowych typów, eliminując konflikt z bcryptjs,
    // którego typy są czasem kompilowane jako @types/bcrypt.
    "types": ["node", "axios", "jsonwebtoken", "nodemailer", "pg", "cors", "bcrypt"]
    // ----------------------------------------
  },
  "include": [
    "./**/*.ts",
    "./utils/**/*.js" 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}