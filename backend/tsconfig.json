{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // --- DODANO W CELU KOPIOWANIA PLIKÓW JS/JSON ---
    "allowJs": true,
    "checkJs": true,
    // Pliki JS (jak trackerScraper.js) będą kopiowane
    "moduleResolution": "Node",
    "types": ["node"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.js" // Wymuś kompilator na uwzględnienie JS
  ],
  "exclude": [
    "node_modules"
  ]
}
